@model CoreAndFood.Models.Category;

@{
    ViewData["Title"] = "CategoryFind";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category Add Page</h1>
<br />

@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))  //action adı, controller adı, method türü//
{
    @Html.Label("CategoryID")
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br />
    @Html.Label("CategoriName")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "color:red" })
    <br />
    @Html.Label("Description")
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Update</button>
}



