@model List<CoreAndFood.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>
<br />

<table class="table table-bordered" >
    <tr>
        <th>ID</th>
        <th>Category</th>
        <th>Descrition</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var x in Model)
    {
    <tr>
        <td>@x.CategoryID</td>
        <td>@x.CategoryName</td>
        <td>@x.CategoryDescription</td>
        <td>@x.Status</td>

        <td><a href="/Category/CategoryDelete/@x.CategoryID" class="btn btn-danger">Delete</a></td>
        <td><a href="/Category/CategoryFind/@x.CategoryID" class="btn btn-success">Update</a></td>

    </tr>
    }
    
</table>

<a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a>

